<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.NoTitleBar">
    </style>
    <!-- customDialog style -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- 加载对话框样式 -->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 横分割线样式 -->
    <style name="line_dividing_gray_horizontal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_divide_line</item>
    </style>
    <!-- 竖分割线样式 -->
    <style name="line_dividing_gray_vertical_style">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_divide_line</item>
    </style>
    <!-- 主界面底部文本框样式 -->
    <style name="main_bottom_textview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/main_bottom_textview_textcolor_selector</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 常用相对布局样式 -->
    <style name="first_relativelayout_style">
        <item name="android:background">@drawable/news_background_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <!-- 常用相对布局样式 -->
    <style name="first_relativelayout_no_background_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <!-- 常用相对布局样式 -->
    <style name="second_relativelayout_style">
        <item name="android:background">@drawable/news_background_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">64dp</item>
    </style>
    <!-- 常用线性布局样式 -->
    <style name="first_linearlayout_style">
        <item name="android:background">@drawable/news_background_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <!-- 常用线性布局样式 -->
    <style name="second_linearlayout_style">
        <item name="android:background">@drawable/news_background_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_height">64dp</item>
    </style>
    <!-- 无数据显示textview样式 -->
    <style name="no_data_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTop">@mipmap/ic_no_data</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray_939598</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/no_data_show</item>
    </style>
    <!-- 登录界面提交文本框样式 -->
    <style name="login_submit_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/emergency_task_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
